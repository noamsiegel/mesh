{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "FlattenedCityIataCodeHotelSearchRequest",
    "type": "object",
    "properties": {
        "stayDetails": {
            "type": "object",
            "properties": {
                "checkInDateLocal": { "type": "string" },
                "checkOutDateLocal": { "type": "string" },
                "rooms": { "type": "number" },
                "guests": {
                    "type": "object",
                    "properties": {
                        "adults": { "type": "number" }
                    },
                    "required": ["adults"]
                }
            },
            "required": [
                "checkInDateLocal",
                "checkOutDateLocal",
                "rooms",
                "guests"
            ]
        },
        "propertyFilter": {
            "type": "object",
            "properties": {
                "location": {
                    "type": "object",
                    "properties": {
                        "type": { "type": "string", "const": "cityIATACode" },
                        "details": {
                            "type": "object",
                            "properties": {
                                "iataCode": { "type": "string" }
                            },
                            "required": ["iataCode"]
                        },
                        "radius": {
                            "type": "object",
                            "properties": {
                                "value": { "type": "number" },
                                "unit": { "type": "string" }
                            },
                            "required": ["value", "unit"]
                        }
                    },
                    "required": ["type", "details", "radius"]
                }
            }
        }
    },
    "required": [
        "stayDetails",
        "propertyFilter"
    ]
}