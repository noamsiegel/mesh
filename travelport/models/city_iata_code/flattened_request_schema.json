{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "FlattenedCityIataCodeHotelSearchRequest",
    "type": "object",
    "properties": {
        "iataCode": { "type": "string" },
        "radiusValue": { "type": "number" },
        "radiusUnit": { "type": "string" },
        "stayDetails": {
            "type": "object",
            "properties": {
                "checkInDateLocal": { "type": "string" },
                "checkOutDateLocal": { "type": "string" },
                "rooms": { "type": "number" },
                "guests": {
                    "type": "object",
                    "properties": {
                        "adults": { "type": "number" }
                    },
                    "required": ["adults"]
                }
            },
            "required": [
                "checkInDateLocal",
                "checkOutDateLocal",
                "rooms",
                "guests"
            ]
        }
    },
    "required": [
        "iataCode",
        "radiusValue",
        "radiusUnit",
        "stayDetails"
    ]
} 